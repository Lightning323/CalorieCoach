<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>CalorieCoach - Open Food Facts</title>
  <%- include('partials/head.ejs') %>
</head>
<body>
<%- include('partials/header.ejs') %>



<div id="loadingOverlay" class="d-flex d-none">
  <div><i class="fa fa-spinner fa-spin"></i> Searching, please wait...</div>
</div>


<ul class="nav nav-tabs" id="foodTabs" role="tablist">
  <li class="nav-item" role="presentation">
    <a
    href="/food-items"
      class="nav-link"
      type="button"
      role="tab"
    > Database
  </a>
    
  </li>
  <li class="nav-item" role="presentation">
    <a
      href="/foodFactsAPI"
      class="nav-link active"
      type="button"
      role="tab"
    > Search OpenFoodFacts
  </a>
  </li>
</ul>


  <div class="container py-5">
<h1 class="mb-4 text-center">Open Food Facts Database</h1>
<form method="POST" action="/foodFactsAPI/search" class="mb-5">
  <div class="input-group">
    <input
      type="text"
      name="query"
      class="form-control"
      placeholder="Search for food (e.g. pizza, banana)"
      value="<%= query %>"
      required
    />
    <button class="btn btn-primary" type="submit" onclick="showLoadingOverlay()">Search</button>
  </div>
</form>

<% if (results) { %>
  <% if (results.length === 0) { %>
    <div class="alert alert-warning">No results found ğŸ˜¢</div>
  <% } else { %>
    <div class="row g-4">
      <% results.forEach(food => { %>
        <div class="col-md-6">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title"><%= food.name %></h5>
              <p class="card-text">
                <strong>Serving:</strong> <%= food.quantity %><br />
                ğŸ”¥ <strong>Calories:</strong> <%= food.calories %><br />
                ğŸ’ª <strong>Protein:</strong> <%= food.protein %> g<br />
                ğŸ <strong>Carbs:</strong> <%= food.carbs %> g<br />
                ğŸ§ˆ <strong>Fat:</strong> <%= food.fat %> g
              </p>
                   <button 
            class="btn btn-success add-food-btn"
            data-name="<%= food.name %>"
            data-quantity="<%= food.quantity %>"
            data-calories="<%= food.calories %>"
            data-protein="<%= food.protein %>"
            data-carbs="<%= food.carbs %>"
            data-fat="<%= food.fat %>"
          >
            <i class="fa fa-plus"></i> Add to Database
          </button>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
<% } %>

  </div>
</body>
<%- include('partials/footer') %>
<script>
function showLoadingOverlay() {
  const loadingOverlay = document.getElementById('loadingOverlay');
  loadingOverlay.classList.remove('d-none');
}

  document.querySelectorAll('.add-food-btn').forEach(button => {
    button.addEventListener('click', async () => {
      const foodData = {
        name: button.dataset.name,
        quantity: button.dataset.quantity,
        calories: button.dataset.calories,
        protein: button.dataset.protein,
        carbs: button.dataset.carbs,
        fat: button.dataset.fat
      };

      try {
        const res = await fetch('/api/foods', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(foodData)
        });

        if (res.ok) {
          button.textContent = 'âœ… Added';
          button.disabled = true;
        } else {
          const data = await res.json();
          alert('Failed to add: ' + (data.message || 'Unknown error'));
        }
      } catch (err) {
        console.error(err);
        alert('Failed to add food');
      }
    });
  });
</script>

</html>
